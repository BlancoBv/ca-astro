---
interface Props {
  title: string;
}

const { title } = Astro.props;
import { ViewTransitions } from "astro:transitions";
import Header from "@components/gui/Header.astro";
import SideBarItems from "@components/gui/SideBarItems.vue";
import Footer from "@components/gui/Footer.astro";
import "bootstrap-icons/font/bootstrap-icons.css";
import "vue3-toastify/dist/index.css";
import NavBar from "@components/gui/NavBar.astro";
Astro.response.headers.set(
  "Cache-Control",
  "public, s-maxage=360, stale-while-revalidate=180"
);
---

<!doctype html>
<html lang="es" data-theme="winter">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="Cuerpo academico de computo distribuido del Instituto Tecnologico Superior de los RÃ­os"
    />
    <meta name="viewport" content="width=device-width" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
    <link rel="manifest" href="/site.webmanifest">
   {import.meta.env.PROD && <script type="text/javascript">
      (function (c, l, a, r, i, t, y) {
        c[a] =
          c[a] ||
          function () {
            (c[a].q = c[a].q || []).push(arguments);
          };
        t = l.createElement(r);
        t.async = 1;
        t.src = "https://www.clarity.ms/tag/" + i;
        y = l.getElementsByTagName(r)[0];
        y.parentNode.insertBefore(t, y);
      })(window, document, "clarity", "script", "p2w2k9i73t");
    </script>}
    <meta name="generator" content={Astro.generator} />
    <ViewTransitions />
    <title>{title}</title>
  </head>
  <body class="w-screen h-screen overflow-x-hidden">
    <div class="drawer h-full w-full">
      <input id="my-drawer-3" type="checkbox" class="drawer-toggle" />
      <div
        class="drawer-content h-full w-full overflow-x-hidden"
        id="scroll-container"
      >
        <!-- Navbar -->
        <Header />
        <NavBar />

        <slot class="px-4 overflow-x-hidden" />

        <Footer />
      </div>
      <div class="drawer-side z-50">
        <label
          for="my-drawer-3"
          aria-label="close sidebar"
          class="drawer-overlay"></label>
        <ul class="menu bg-base-200 min-h-full w-80 p-4" transition:persist>
          <!-- Sidebar content here -->
          <SideBarItems client:visible />
        </ul>
      </div>
    </div>
  </body>
</html>
<style is:global>
  * {
    scroll-behavior: smooth;
  }
  main {
    min-height: 80%;
  }
</style>

<script>
  document.addEventListener("astro:page-load", (ev) => {
    const isDark = JSON.parse(localStorage.getItem("isDark") ?? "false");
    if (isDark) {
      document.documentElement.setAttribute("data-theme", "night");
    } else {
      document.documentElement.setAttribute("data-theme", "winter");
    }
  });
</script>
