---
interface Props {
  url: string;
  title: string;
}
const { url, title } = Astro.props;

const id = url.match(/(?<=\/)[^\/?]+(?=\?)/);
console.log(url);
---

<lite-youtube
  videoid={id?.[0] ?? ""}
  style={`background-image: url('https://i.ytimg.com/vi/${id?.[0] ?? ""}/hqdefault.jpg');`}
  params="controls=0&start=10&end=30&modestbranding=2&rel=0&enablejsapi=1&autoplay=1&showinfo=0"
  class="rounded-box"
  title={title}
