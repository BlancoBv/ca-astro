---
import { formatDate } from "@assets/format";
import { Image } from "astro:assets";

interface Props {
  titulo: string;
  id: number;
  imagen: string;
  fecha: string;
}
const { titulo, id, imagen, fecha } = Astro.props;
---

<a
  href={`/content/${id}`}
  class="card bg-base-100 image-full w-full h-96 shadow-xl group"
>
  <figure class="w-full">
    <Image
      transition:name={`img-${id}`}
      class="object-contain group-hover:scale-110 duration-200 ease-in h-full w-full"
      src={imagen}
      alt={titulo}
      width={100}
      height={100}
      loading="lazy"
    />
  </figure>
  <div class="card-body">
    <h2 class="card-title text-2xl">{titulo}</h2>
    <p>{formatDate(fecha, "LL")}</p>
  </div>
</a>
