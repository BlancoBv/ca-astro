---
import { formatDate } from "@assets/format";
import { Image } from "astro:assets";

interface Props {
  titulo: string;
  id: number;
  imagen: string;
  fecha: string;
}
const { titulo, id, imagen, fecha } = Astro.props;
---

<div class="card bg-base-100 w-full h-100 shadow-sm">
  <figure class="h-50">
    <Image
      transition:name={`img-${id}`}
      class="object-cover w-full h-full"
      src={imagen}
      alt={titulo}
      width={100}
      height={100}
      loading="eager"
    />
  </figure>
  <div class="card-body">
    <h2 class="card-title">{titulo}</h2>
    <p>
      <div class="badge badge-secondary flex items-center justify-center">
        <i class="bi bi-calendar-fill"></i>
        {formatDate(fecha, "L")}
      </div>
    </p>
    <div class="card-actions justify-end">
      <a href={`/content/evento/${id}`} class="btn btn-primary">
        Más información
      </a>
    </div>
  </div>
</div>
